@font-face { font-family: "Allura"; src: url('../assets/fonts/Allura-Regular.ttf'); } * { max-width: 100%; max-height: 100%; border: 0; margin: 0; padding: 0; box-sizing: border-box; scroll-behavior: smooth; } body { font-family: Helvetica, "sans-serif"; } .main-menu { background-color: #D9501E; padding: 16px; color: white; position: fixed; width: 100%; z-index: 999; } .main-menu ul { list-style-type: none; } .main-menu li { display: inline; margin-left: 12px; } .main-menu a { text-decoration: none; color: white; } .main-menu a:hover { opacity: .8; } .brand-logo { font-family: "Allura"; font-size: 34px; margin-right: 12px; } .banner { text-align: center; color: white; position: relative; } .banner img { max-width: 100%; } .banner-caption { position: absolute; top: 40%; margin: 0px 200px; } .container { display: flex; flex-direction: column; flex-wrap: wrap; padding: 62px; } .about { text-align: justify; } .gallery img { max-width: 300px; } input, textarea { border: 1px solid black; margin-bottom: 12px; padding: 10px; width: 40%; } button { background-color: #DBBA22; padding: 12px; } footer { text-align: center; background-color: #D9501E; color: white; padding: 12px; }
